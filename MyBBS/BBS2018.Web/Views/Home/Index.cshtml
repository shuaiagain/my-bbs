@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <style type="text/css">
        .wrap-main {
            width: 100%;
            padding-top: 60px;
            background: #f6f6f6;
        }

            .wrap-main .main {
                width: 70%;
                margin: 0 auto;
            }

            .wrap-main .main-header {
                margin: 10px 0px;
                background: #fff;
            }

            .wrap-main .ask, .answer {
                margin-left: 10px;
                margin-right: 40px;
                height: 50px;
                line-height: 50px;
                cursor: pointer;
            }

                .wrap-main .ask:hover, .answer:hover {
                    color: #0084ff;
                }

            .wrap-main .main-content .content-item {
                background: #fff;
                padding: 10px;
                margin-bottom: 10px;
            }

                .wrap-main .main-content .content-item .user-headlogo {
                    display: inline-block;
                    cursor: pointer;
                }

                /*.wrap-main .main-content .content-item .headlogo-item {
                    height: 24px;
                    width: 24px;
                    vertical-align: top;
                }*/

                .wrap-main .main-content .content-item .user-name {
                    display: inline-block;
                    margin-left: 5px;
                    height: 24px;
                    line-height: 22px;
                    font-weight: 700;
                    cursor: pointer;
                }

                .wrap-main .main-content .content-item .user-intro {
                    display: inline-block;
                    height: 24px;
                    line-height: 22px;
                    width: 650px;
                    vertical-align: bottom;
                    word-break: break-all;
                }

                .wrap-main .main-content .content-item .content-ask {
                    margin: 12px 0px;
                    font-weight: 700;
                }

                .wrap-main .main-content .content-item .ask-question {
                    color: #000;
                }

                    .wrap-main .main-content .content-item .ask-question:hover {
                        color: #175199;
                        cursor: pointer;
                    }

                .wrap-main .main-content .content-item .words-summary {
                    display: inline-block;
                }

                .wrap-main .main-content .content-item .words-click {
                    display: inline-block;
                    vertical-align: top;
                }

            .wrap-main .main-content .content-operate {
                margin-top: 12px;
            }

                .wrap-main .main-content .content-operate .vote {
                    margin-right: 20px;
                }

                .wrap-main .main-content .content-operate .vote-praise, .vote-tread {
                    display: inline-block;
                    background: #e5f2ff;
                    color: #0084ff;
                    padding: 5px 10px;
                    cursor: pointer;
                    margin-right:5px;
                }



                .wrap-main .main-content .content-operate .comment-wrap {
                    display: inline-block;
                    padding: 5px 0px;
                    color: #8590a6;
                    cursor: pointer;
                }
    </style>
}

<div class="wrap-main">
    <div class="main">

        <div class="main-header clearfix">
            <div class="ask floatL">
                <a class="iconfont icon-question"></a>
                <a class="question">提问</a>
            </div>
            <div class="answer floatL">
                <a class="iconfont icon-answer"></a>
                <a class="answer">回答</a>
            </div>
        </div>

        <div class="main-content"></div>
    </div>
</div>

<input type="hidden" name="askquesUrl" value="@(Url.Action("AskQuestion","Question"))" />
<input type="hidden" name="getQuesUrl" value="@(Url.Action("GetQuestionList", "Question"))" />
<input type="hidden" name="savePraiseTreadUrl" value="@Url.Action("SavePraiseOrTread", "PraiseOrTread")"/>
<input type="hidden" name="questionDetail" value="@Url.Action("QuestionDetail", "Question")" />
@section footer{
    <script type="text/javascript" src="~/Content/js/question.js"></script>
}