@using BBS2018.Bussiness.ViewModel
@model QuestionDetailVM
@{
    ViewBag.Title = "QuestionDetial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <style type="text/css">
        .ques-detail {
            width: 100%;
            /*height: 100%;*/
            padding-top: 60px;
            background: #f6f6f6;
        }

            .ques-detail .detail-title {
                background: #fff;
                margin-top: 5px;
            }

            .ques-detail .title-wrap {
                width: 70%;
                margin: 0 auto;
                padding: 15px 0px;
            }

                .ques-detail .title-wrap .title-up, .title-down {
                    margin: 0px 15px;
                }

                .ques-detail .title-wrap .write-an {
                    display: inline-block;
                    width: 90px;
                    height: 26px;
                    line-height: 26px;
                    text-align: center;
                    border: 1px solid #0084ff;
                    color: #0084ff;
                    cursor: pointer;
                }

                .ques-detail .title-wrap .title-down {
                    margin-top: 15px;
                }

                .ques-detail .title-wrap .write-an:hover {
                    background: #f0f8ff;
                }

            .ques-detail .detail-content {
                width: 70%;
                margin: 0 auto;
                margin-top: 10px;
            }

                .ques-detail .detail-content .content-bar {
                    padding: 15px;
                    background: #fff;
                    border-bottom: 1px solid #bbb;
                }

                    .ques-detail .detail-content .content-bar .defult-sort, .icon-sort {
                        color: #77839c;
                        font-size: 12px;
                    }


                .ques-detail .detail-content .content-item {
                    padding: 15px;
                    background: #fff;
                }

                    .ques-detail .detail-content .content-item .user-logo {
                        display: inline-block;
                        height: 40px;
                        line-height: 40px;
                    }

                    .ques-detail .detail-content .content-item .logo-show {
                        margin-right: 10px;
                    }

                    .ques-detail .detail-content .content-item .item-user,
                    .item-praise,
                    .item-date {
                        padding: 10px 0px;
                        color: #8590a6;
                    }

                    .ques-detail .detail-content .content-item .domain-show {
                        color: #646464;
                    }

                    .ques-detail .detail-content .content-item .item-praise * {
                        color: #8590a6;
                    }
    </style>
}
<div class="ques-detail">
    <div class="detail">

        <div class="detail-title">
            <div class="title-wrap">
                <div class="title-up">
                    <h2 class="up-text">@(Model.Title)</h2>
                </div>
                <div class="title-down">
                    <div class="down-write">
                        <a class="write-an">
                            <span class="iconfont icon-write-answer"></span>
                            <span>写回答</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="detail-content">

            <div class="content-bar clearfix">
                <div class="bar-left floatL">
                    <strong class="an-count">@(Model.AnswerCount)</strong><span class="an-text">个回答</span>
                </div>
                <div class="bar-right floatR">
                    <a class="defult-sort">默认排序</a>
                    <a class="iconfont icon-sort"></a>
                </div>
            </div>

            @if (Model.Items.Count > 0)
            {
                foreach (var item in Model.Items)
                {
                    <div class="content-item">
                        <div class="item-user clearfix">
                            <a class="user-logo floatL"><img class="logo-show img40" src="~/Content/images/Login/bg-login.png" /></a>
                            <div class="user-info floatL">
                                <div class="info-name"><a class="name-show" data-uid="@(item.UserID)">@(item.UserName)</a></div>
                                <div class="info-domain"><a class="domain-show">your honours</a></div>
                            </div>
                        </div>
                        <div class="item-praise">
                            <a class="praise-show">
                                <span class="show-other">牛牛</span>
                                <span class="show-text">等</span>
                                <span class="show-count">@(item.PraiseCount)</span>
                                <span class="show-last">人赞同了该回答</span>
                            </a>
                        </div>
                        <div class="item-answer">
                            <span class="answer-text">@(item.Content)</span>
                        </div>
                        <div class="item-date">
                            <span class="date-text">发布于</span>
                            <span class="date-show">@(item.EditTime.Value.ToString("yyyy-MM-dd HH:mm:ss"))</span>
                        </div>
                        <div class="content-operate clearfix" data-answerid="6">
                            <div class="vote floatL">
                                <div class="vote-praise updown-active" data-type="1">
                                    <a class="iconfont icon-arrowup"></a>
                                    <a class="praise">赞同</a>
                                    <a class="praise-num">@(item.PraiseCount)</a>
                                </div>
                                <div class="vote-tread " data-type="2">
                                    <a class="iconfont icon-arrowdown"></a>
                                </div>
                            </div>
                            <div class="content-comment floatL">
                                <div class="comment-wrap">
                                    <a class="iconfont icon-comment"></a>
                                    <a class="comment-num">0</a>
                                    <span class="comment-text">条评论</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>

    </div>
</div>
<input type="hidden" name="writeAnswerUrl" value="@(Url.Action("WriteAnswer", "Answer"))" />
<input type="hidden" name="saveAnswerUrl" value="@(Url.Action("SaveAnswer", "Answer"))" />
<input type="hidden" name="questionId" value="@(Model.ID)" />
<input type="hidden" name="getAnswerUrl" value="@(Url.Action("","Question"))"/>
@section footer{
    <script type="text/javascript" src="~/Content/js/question-detail.js"></script>
}